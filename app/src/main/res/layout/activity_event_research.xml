<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_event_research"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fr.paris10.projet.assogenda.assogenda.ui.activites.EventResearchActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:id="@+id/activity_event_research_title_info"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:text="@string/activity_event_research_title_info"
            android:textAlignment="center"
            android:textSize="30sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_create_event_horizontal_layout_start">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10"
                android:layout_weight="1"
                android:hint="@string/activity_event_research_start_date"
                android:focusable="false"
                android:id="@+id/activity_event_research_start_date" />
        </LinearLayout>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_event_research_eventype_spinner"
            android:layout_weight="0.05" />

        <Button
            android:text="@string/activity_event_research_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_event_research_button"
            android:layout_weight="0.05" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/activity_event_research_list_view" />
    </LinearLayout>
</LinearLayout>
