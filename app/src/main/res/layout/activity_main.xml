<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fr.paris10.projet.assogenda.assogenda.ui.activites.MainActivity">


    <Button
        android:text="@string/activity_main_button_association"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        android:id="@+id/activity_main_button_association" />

    <Button
        android:text="Liste des événements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/main_list_events_button" />

    <Button
        android:text="@string/activity_main_calendar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:id="@+id/activity_main_calendar_button"
        android:layout_below="@+id/activity_main_button_association"
        android:layout_alignStart="@+id/activity_main_button_association"
        android:layout_alignEnd="@+id/activity_main_button_association" />

    <Button
        android:text="Déconnexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_logout_button"
        android:layout_marginBottom="73dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/activity_main_calendar_button" />

    <Button
        android:text="@string/activity_main_event_research_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_main_calendar_button"
        android:layout_alignStart="@+id/activity_main_calendar_button"
        android:layout_marginTop="38dp"
        android:id="@+id/activity_main_event_research_button"
        android:layout_alignEnd="@+id/activity_main_calendar_button" />
</RelativeLayout>
